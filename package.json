{
  "name": "authorization",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "prettier": "prettier --write",
    "format": "prettier \"{app,components,models,styles,types,utils}/**/*.{ts,tsx,js,json}\" --ignore-path .gitignore",
    "format:check": "pnpm format --check",
    "format:write": "pnpm format --write",
    "prepare": "husky install",
    "validate": "yarn format:write && yarn tsc && yarn build"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "!{dist,build,.next,out,coverage,node_modules}/**/*": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "mongodb": "^6.8.0",
    "mongoose": "^8.6.0",
    "next": "14.2.7",
    "next-auth": "^4.24.7",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.53.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "eslint-config-next": "14.2.7",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "repository": "https://github.com/MaNaSDeo/authorization.git",
  "author": "manasdeo <rmnslogin@gmail.com>"
}
